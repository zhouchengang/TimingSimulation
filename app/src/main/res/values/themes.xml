<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimingLay" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->




        <!--状态栏不纯透明与否-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--导航栏纯黑与否-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/remotewhite</item>
        <item name="android:navigationBarColor">@color/remotewhite</item>

    </style>



    <style name="LearningActivity" parent="Theme.TimingLay">
        <item name="android:statusBarColor">#5090F0</item>
