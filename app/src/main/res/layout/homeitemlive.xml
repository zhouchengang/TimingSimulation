<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundcornorhomediary">


    <ImageView
        android:id="@+id/homelivebkg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/topgreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/homedakacomeon"
        app:layout_constraintBottom_toBottomOf="@id/homedakacomeon"
        android:background="@drawable/twocornorroundhomelive"
        />



    <ImageView
        android:padding="0dp"
        android:id="@+id/homedakaxxq"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:src="@mipmap/main_item_live"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/topgreen"
        app:layout_constraintTop_toTopOf="@id/homedakacomeon"
        app:layout_constraintBottom_toBottomOf="@id/homedakacomeon"

        />


    <TextView
        android:id="@+id/homedakacomeon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/homedakaxxq"
        app:layout_constraintTop_toTopOf="@id/topgreen"
        app:layout_constraintBottom_toBottomOf="@id/topgreen"
        android:text="Live"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:paddingStart="2dp"
        android:paddingEnd="10dp"
        />







    <TextView
        android:id="@+id/homedakamidbutt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="我要加入"
        android:textColor="#FFFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homedakahead"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/fourcornorroundhomelive"
        android:gravity="center"
        android:textSize="12sp"
        />








    <ImageView
        android:id="@+id/homedakahead"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/head"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/homedakaneckname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/homedakahead"
        app:layout_constraintBottom_toBottomOf="@id/homedakahead"
        app:layout_constraintStart_toEndOf="@id/homedakahead"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="5614654"
        android:textColor="@color/white"
        />








</androidx.constraintlayout.widget.ConstraintLayout>