<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/backg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roundcornorwhite"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        ></View>


    <ImageView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/p1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintTop_toTopOf="@+id/backg"
        app:layout_constraintEnd_toStartOf="@id/p2"
        app:layout_constraintBottom_toTopOf="@id/p3"
        android:src="@mipmap/head">
    </ImageView>

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/p2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/p1"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toTopOf="@+id/backg"
        app:layout_constraintBottom_toTopOf="@id/p4"
        android:src="@mipmap/head">
    </ImageView>


    <ImageView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/p3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/p1"
        app:layout_constraintBottom_toTopOf="@id/itemdevideline"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintEnd_toStartOf="@id/p4"
        android:src="@mipmap/head">
    </ImageView>

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/p4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/p3"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@id/p2"
        app:layout_constraintBottom_toTopOf="@id/itemdevideline"
        android:src="@mipmap/head">
    </ImageView>


    <View
        android:id="@+id/itemdevideline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/remoteBackground"
        app:layout_constraintStart_toStartOf="@id/backg"
        app:layout_constraintEnd_toEndOf="@id/backg"
        app:layout_constraintTop_toTopOf="@id/backg"
        android:layout_marginTop="200dp"

        ></View>


    <ImageView
        android:id="@+id/greenpoint"
        android:layout_width="7dp"
        android:layout_height="7dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@id/itemdevideline"
        app:layout_constraintBottom_toBottomOf="@+id/backg"
        android:background="@drawable/roundgreen"
        android:layout_marginLeft="10dp"
        ></ImageView>

    <TextView
        android:id="@+id/djs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@id/itemdevideline"
        app:layout_constraintStart_toEndOf="@id/greenpoint"
        android:layout_marginLeft="10dp"
        android:text="倒计时"
        android:textColor="@color/black"
        android:textSize="12sp"
        ></TextView>


    <View
        android:id="@+id/enterbuttwhite"
        app:layout_constraintEnd_toEndOf="@id/backg"
        app:layout_constraintBottom_toBottomOf="@id/backg"
        app:layout_constraintTop_toBottomOf="@id/itemdevideline"
        android:layout_marginEnd="10dp"
        android:layout_height="24dp"
        android:layout_width="50dp"
        android:background="@drawable/roundcornorremotewhite"
        >
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/enterbuttwhite"
        app:layout_constraintEnd_toEndOf="@id/enterbuttwhite"
        app:layout_constraintTop_toTopOf="@id/enterbuttwhite"
        app:layout_constraintBottom_toBottomOf="@id/enterbuttwhite"
        android:textSize="12sp"
        android:textColor="#4A4AE6"
        android:gravity="center"
        android:text="进入"
        ></TextView>




    <ImageView
        android:id="@+id/gender1"
        android:layout_width="60dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/p1"
        app:layout_constraintEnd_toEndOf="@id/p1"
        app:layout_constraintBottom_toBottomOf="@id/p1"
        android:src="@mipmap/iv_male_icon"
        android:scaleType="fitEnd"
        ></ImageView>



    <ImageView
        android:id="@+id/gender2"
        android:layout_width="60dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/p2"
        app:layout_constraintEnd_toEndOf="@id/p2"
        app:layout_constraintBottom_toBottomOf="@id/p2"
        android:src="@mipmap/iv_male_icon"
        android:scaleType="fitEnd"
        ></ImageView>


    <ImageView
        android:id="@+id/gender3"
        android:layout_width="60dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/p3"
        app:layout_constraintEnd_toEndOf="@id/p3"
        app:layout_constraintBottom_toBottomOf="@id/p3"
        android:src="@mipmap/iv_male_icon"
        android:scaleType="fitEnd"
        ></ImageView>



    <ImageView
        android:id="@+id/gender4"
        android:layout_width="60dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/p4"
        app:layout_constraintEnd_toEndOf="@id/p4"
        app:layout_constraintBottom_toBottomOf="@id/p4"
        android:src="@mipmap/iv_male_icon"
        android:scaleType="fitEnd"
        ></ImageView>













</androidx.constraintlayout.widget.ConstraintLayout>