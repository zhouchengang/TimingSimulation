<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/roundcornorhomediary">

    <ImageView
        android:id="@+id/homeitemquestionbkg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/homequestionzxdy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/twocornorroundhomequestion"
        android:text="1v1 在线答疑"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:padding="4dp"
        />


    <TextView
        android:id="@+id/homeitemquestiontitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homequestionzxdy"
        android:layout_marginTop="30dp"
        android:text="123q有关费用发过去偶尔规范要求各父亲欧阳哥菲欧齐尔规范要求各父亲欧阳哥菲欧齐尔规范要求各父亲欧阳哥菲欧齐格飞哟切割佛邱娥国3"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/fourcornorroundhomequestion"
        android:padding="15dp"

        />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/homeitemquestiontitle"
        app:layout_constraintEnd_toEndOf="@id/homeitemquestiontitle"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestiontitle"
        android:background="@drawable/sanjiao"
        />

    <View
        android:id="@+id/homeitemquestioncricle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/homeitemquestionroundcricleborder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestiontitle"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/homeitemquestionuserhead"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/homeitemquestioncricle"
        app:layout_constraintEnd_toEndOf="@id/homeitemquestioncricle"
        app:layout_constraintTop_toTopOf="@id/homeitemquestioncricle"
        app:layout_constraintBottom_toBottomOf="@id/homeitemquestioncricle"
        android:layout_margin="1dp"
        android:src="@mipmap/head"
        android:scaleType="fitCenter"
        />


    <TextView
        android:id="@+id/homeitemquestionneckname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="顾宏前额"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestioncricle"
        />
    <TextView
        android:id="@+id/homeitemquestionintroduction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="顾宏伟一个佛公务员法还不我和我吃发货IE觉得年级发电机房hi杜绝浪费IP点击胸前额"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestionneckname"
        />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeitemquestioncycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestionintroduction"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/homeitemquestionitem"
        />




    <View
        android:id="@+id/homeitemquestionblackbar"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:background="@drawable/homeitemquestionroundcornorblack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/homeitemquestionpaidui"
        app:layout_constraintTop_toBottomOf="@id/homeitemquestioncycle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/homeitemquestionblackbar"
        app:layout_constraintTop_toTopOf="@id/homeitemquestionblackbar"
        app:layout_constraintBottom_toBottomOf="@id/homeitemquestionblackbar"
        android:src="@mipmap/head"
        />


    <View
        android:id="@+id/homeitemquestiongreen"
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toEndOf="@id/icon2"
        app:layout_constraintTop_toTopOf="@id/homeitemquestionblackbar"
        app:layout_constraintBottom_toBottomOf="@id/homeitemquestionblackbar"
        android:background="@drawable/roundgreen"
        android:layout_marginStart="2dp"
        />

    <TextView
        android:id="@+id/homeitemquestionpaidui"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/homeitemquestionblackbar"
        app:layout_constraintBottom_toBottomOf="@id/homeitemquestionblackbar"
        app:layout_constraintStart_toEndOf="@id/homeitemquestiongreen"
        android:layout_marginStart="2dp"
        android:text="1231143123123"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingEnd="5dp"
        />




    <ImageView
        android:id="@+id/icon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/homeitemquestionblackbar"
        app:layout_constraintBottom_toBottomOf="@id/homeitemquestionblackbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:src="@mipmap/head"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
